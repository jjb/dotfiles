# functions, not aliases. i should perhaps make a functions file...
gem-info() { gem query --details --all --remote --name-matches "^$1$" }
fix_permissions() {
  sudo chgrp -R $1 $2
  sudo chmod -R g+r $2
  sudo chmod -R g+w $2
  sudo chmod -R g+s $2
}
path() {
  p=`pwd`/$1
  os=`uname`
  
  if [[ $os == 'Darwin' ]]
  then
    echo -n $p | pbcopy
  fi

  echo $p
}
