[core]
  excludesfile = ~/.gitignore
[user]
	name = John Joseph Bachir
	email = j@jjb.cc
[color]
	branch = auto
	diff = auto
	status = auto
	ui = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[diff]
	renamelimit = 50000
[mergetool "kdiff3"]
	path = /opt/local/bin/kdiff3
[mergetool]
	tool = kdiff3
[diff "opendiff"]
	command = opendiff

[rerere]
	enabled = true
[alias]
	info = remote show origin
  d = diff --patience --word-diff=color --ignore-space-change
[gist]
	private = yes
	browse = yes
[svn]
	rmdir = true

[branch]
	autosetuprebase = always
	autosetupmerge = always
